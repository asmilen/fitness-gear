<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fitnessgear.child.AddPlan" >

    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="10dp"
            android:layout_y="10dp"
            android:text="Plan Name" />

        <EditText
            android:id="@+id/txtPlanName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="100dp"
            android:ems="10"
            android:maxLength="50" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="10dp"
            android:layout_y="50dp"
            android:text="Main Goal" />

        <Spinner
            android:id="@+id/spMainGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="100dp"
            android:layout_y="40dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="10dp"
            android:layout_y="90dp"
            android:text="Gender" />

        <Spinner
            android:id="@+id/spGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="100dp"
            android:layout_y="80dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="10dp"
            android:layout_y="140dp"
            android:text="Fitness Level" />

        <Spinner
            android:id="@+id/spFitnessLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="100dp"
            android:layout_y="130dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="10dp"
            android:layout_y="190dp"
            android:text="Created By" />

        <EditText
            android:id="@+id/txtCreatedBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="100dp"
            android:layout_y="180dp"
            android:ems="10"
            android:maxLength="50" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_x="10dp"
            android:layout_y="240dp"
            android:text="Date Created" />

        <EditText
            android:id="@+id/txtDateCreated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="100dp"
            android:layout_y="230dp"
            android:ems="10" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="10dp"
            android:layout_y="290dp"
            android:text="Total Weeks" />

        <EditText
            android:id="@+id/txtTotalWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="100dp"
            android:layout_y="280dp"
            android:ems="10"
            android:inputType="number"
            android:maxLength="50" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="10dp"
            android:layout_y="340dp"
            android:text="Day/Week" />

        <EditText
            android:id="@+id/txtDayPerWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="100dp"
            android:layout_y="330dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:maxLength="50" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="10dp"
            android:layout_y="390dp"
            android:text="Workout Time" />

        <EditText
            android:id="@+id/txtWorkoutTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="100dp"
            android:layout_y="380dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:maxLength="50" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="10dp"
            android:layout_y="440dp"
            android:text="Time/Week" />

        <EditText
            android:id="@+id/txtTimePerWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="100dp"
            android:layout_y="430dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:maxLength="50" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="10dp"
            android:layout_y="490dp"
            android:text="Total Cardio" />

        <EditText
            android:id="@+id/txtTotalCardioTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="100dp"
            android:layout_y="480dp"
            android:ems="10"
            android:inputType="number"
            android:maxLength="50" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_x="10dp"
            android:layout_y="540dp"
            android:text="Cancel" />

        <Button
            android:id="@+id/btnCreatePlan"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_x="200dp"
            android:layout_y="540dp"
            android:text="Create Plan" />
        
        <DatePicker 
            android:id="@+id/datePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </AbsoluteLayout>

</ScrollView>