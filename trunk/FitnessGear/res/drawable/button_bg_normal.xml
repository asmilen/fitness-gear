<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <item
        android:right="5dp"
        android:top="5dp">
        <shape>
            <shape>
                <corners android:radius="5dp" />

                <solid android:color="#B5B5B5" />
            </shape>
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp">
        <shape>
            <gradient
                android:angle="270"
                android:endColor="@color/button_bg_normal"
                android:startColor="@color/button_bg_normal" />

            <stroke
                android:width="1dp"
                android:color="@color/button_bg_normal" />

            <corners android:radius="5dp" />

            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>

</layer-list>