<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/grid_selector"
    android:orientation="horizontal" >

    <!-- android:background="@drawable/list_select" -->

    <LinearLayout
        android:layout_width="190dp"
        android:layout_height="110dp" >

        <ImageView
            android:id="@+id/img1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_people" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_photos" />
    </LinearLayout>

    <AbsoluteLayout
        android:layout_width="170dp"
        android:layout_height="110dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/exerciseName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_x="5dp"
            android:layout_y="10dp"
            android:text="Barbell bench press - Medium grip"
            android:textAllCaps="true"
            android:textColor="@color/text_title_color"
            android:textSize="10sp"
            android:background="#024f91"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="5dp"
            android:layout_y="60dp"
            android:text="Rating:"
            android:textAllCaps="true"
            android:textColor="@color/text_description"
            android:textSize="8sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="80dp"
            android:layout_y="60dp"
            android:text="9.0"
            android:textColor="#1AA2DB"
            android:textSize="8sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewCustomCell2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="5dp"
            android:layout_y="70dp"
            android:text="Muscle:"
            android:textAllCaps="true"
            android:textColor="@color/text_description"
            android:textSize="8sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtMuscle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="80dp"
            android:layout_y="70dp"
            android:text="Muscle:"
            android:textColor="#1AA2DB"
            android:textSize="8sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="5dp"
            android:layout_y="80dp"
            android:text="Equipment:"
            android:textAllCaps="true"
            android:textColor="@color/text_description"
            android:textSize="8sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtEquipment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="80dp"
            android:layout_y="80dp"
            android:text="Equipment:"
            android:textColor="#1AA2DB"
            android:textSize="8sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="5dp"
            android:layout_y="90dp"
            android:text="Exercise Type:"
            android:textAllCaps="true"
            android:textColor="@color/text_description"
            android:textSize="8sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtExerciseType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="80dp"
            android:layout_y="90dp"
            android:text="Exercise Type:"
            android:textColor="#1AA2DB"
            android:textSize="8sp"
            android:textStyle="bold" />
    </AbsoluteLayout>

</LinearLayout>