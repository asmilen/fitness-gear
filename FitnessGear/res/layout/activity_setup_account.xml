<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="10dp"
        android:layout_y="20dp"
        android:text="User Name" />

    <EditText
        android:id="@+id/etUserNameFirstActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="100dp"
        android:layout_y="10dp"
        android:ems="10"
        android:maxLength="18"
        android:singleLine="true" >
    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="10dp"
        android:layout_y="70dp"
        android:text="Date of Birth" />

    <EditText
        android:id="@+id/etDoBFirstActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="100dp"
        android:layout_y="60dp"
        android:ems="10"
        android:maxLength="10"
        android:singleLine="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="10dp"
        android:layout_y="120dp"
        android:text="Gender" />

    <Spinner
        android:id="@+id/spGenderFirstActivity"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_x="100dp"
        android:layout_y="110dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="10dp"
        android:layout_y="170dp"
        android:text="Weight" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="10dp"
        android:layout_y="220dp"
        android:text="Height" />

    <EditText
        android:id="@+id/etWeightFirstActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="100dp"
        android:layout_y="160dp"
        android:ems="5"
        android:inputType="numberDecimal"
        android:maxLength="3" >
    </EditText>

    <EditText
        android:id="@+id/etHeightFirstActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="100dp"
        android:layout_y="210dp"
        android:ems="5"
        android:inputType="numberDecimal"
        android:maxLength="3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_y="270dp" >

        <Button
            android:id="@+id/SaveProfileUser"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:text="Save profile setup"
            android:textColor="@color/text_title_color" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="220dp"
        android:layout_y="170dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Kg" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="220dp"
        android:layout_y="220dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Cm" />

</AbsoluteLayout>