<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grid_selector"
    android:orientation="vertical" >

    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="90dp" >

        <TextView
            android:id="@+id/txtPlanName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="10dp"
            android:layout_y="5dp"
            android:text="JAMIE EASON&apos;S LIVEFIT TRAINER"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="10dp"
            android:layout_y="50dp"
            android:text="Level:" />

        <TextView
            android:id="@+id/txtLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="90dp"
            android:layout_y="50dp"
            android:text="All Levels"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mainGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="10dp"
            android:layout_y="70dp"
            android:text="Main Goal:" />

        <TextView
            android:id="@+id/txtMainGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="90dp"
            android:layout_y="70dp"
            android:text="BodySpace"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="190dp"
            android:layout_y="70dp"
            android:text="Program For:" />

        <TextView
            android:id="@+id/txtGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="280dp"
            android:layout_y="70dp"
            android:text="Female"
            android:textColor="#000000"
            android:textStyle="bold" />
    </AbsoluteLayout>

    <!--  -->


    <!--  -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.4"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/totalWeeks"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:text="TOTAL WEEKS"
                android:textColor="@color/text_title"
                android:textSize="7sp" />

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@color/background_title_color"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txtTotalWeeks"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="bottom|center_horizontal"
                    android:text="12"
                    android:textColor="@color/text_title_color"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/time_per_plan"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="Weeks"
                    android:textColor="@color/text_title_color"
                    android:textSize="7sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.4"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/averageDays"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:text="AVERAGE DAYS/WEEK"
                android:textColor="@color/text_title"
                android:textSize="7sp" />

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@color/background_title_color"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txtAverageDay"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="bottom|center_horizontal"
                    android:text="12"
                    android:textColor="@color/text_title_color"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/day_per_start_plan"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="Days"
                    android:textColor="@color/text_title_color"
                    android:textSize="7sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.4"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/averageTime"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:text="AVERAGE WORKOUT TIME"
                android:textColor="@color/text_title"
                android:textSize="7sp" />

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@color/background_title_color"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txtArverageTime"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="bottom|center_horizontal"
                    android:text="12"
                    android:textColor="@color/text_title_color"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/time_per_start"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="Mins"
                    android:textColor="@color/text_title_color"
                    android:textSize="7sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.4"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/totalTime"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:text="TOTAL TIME/WEEK"
                android:textColor="@color/text_title"
                android:textSize="7sp" />

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@color/background_title_color"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txtTotalTimeAWeek"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="bottom|center_horizontal"
                    android:text="12"
                    android:textColor="@color/text_title_color"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/time_per_week"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="Mins"
                    android:textColor="@color/text_title_color"
                    android:textSize="7sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.4"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/totalCardio"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:text="TOTAL CADIO"
                android:textColor="@color/text_title"
                android:textSize="7sp" />

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@color/background_title_color"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txtTotalCardio"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="bottom|center_horizontal"
                    android:text="12"
                    android:textColor="@color/text_title_color"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cardio_per_plan"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="Mins"
                    android:textColor="@color/text_title_color"
                    android:textSize="7sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>